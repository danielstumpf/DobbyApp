    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Login" >
        </activity>
        <activity android:name=".Connect" >
        </activity>
        <activity
            android:name=".ConnectDrawer"
            android:label="@string/title_activity_connect_drawer"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name=".ChangePass" >
        </activity>
        <activity
            android:name=".InfoAbout"
            android:label="@string/title_activity_info_about"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name=".Support" >
        </activity>

        <uses-permission android:name="android.permission.INTERNET" />

        <activity android:name=".PiConnection" >
        </activity>
    </application>

</manifest>
